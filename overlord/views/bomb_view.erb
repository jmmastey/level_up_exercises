<html>
<head>
<link rel="stylesheet" type="text/css" href="styles/app.css">
<link href="styles/bootstrap.min.css" rel="stylesheet">
<script src="scripts/bombtimer.js" type="text/javascript"></script>
</head>
<body>
<h1 class="heading"> BOMB! BOMB! BOMB! </h1>
<% if @bomb.active?%>
<h2 class= "heading_two"> Status: The bomb is active </h2>
<img id = "bomb_active" src="images/active_bomb.jpg">
<% elsif !@bomb.exploded? %>
<h2 class="heading_two"> Status: The bomb is inactive </h2>
 <img id="bomb_inactive" src="images/inactive_bomb.jpg">
 <%else%>
 <h2 class="heading_two"> Status: The bomb has exploded. Ha!</h2>
 <img id="bomb_exploded" src="images/exploded_bomb.jpg">
<% end %>

<form action="/activate" method="post">
  <input type="text" id="active" name="activation_code">
  <button type="submit" class="btn btn-danger">Activate</button><br/>
</form>

<form action="/deactivate" method ="post">
  <input type="text" name="deactivation_code">
  <button type="submit" class="btn btn-primary">Deactivate</button>
</form>

</div>
</body>
</html>
