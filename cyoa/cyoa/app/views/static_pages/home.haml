%h1 Home

.col-md-4
  %h2 Twitter Fans ("followers")      
  .bubblechart
    %ul.bubblechains
      %li
        %span Artists
        %table
          - @artists.each do |artist|
            %tr
              %td= artist.name
              %td= artist.fan_count("Twitter")
.col-md-4
  %h2 YouTube Fans ("likes")
  .bubblechart
    %ul.bubblechains
      %li
        %span Artists
        %table
          - @artists.each do |artist|
            %tr
              %td= artist.name
              %td= artist.fan_count("YouTube")

.col-md-4
  %h2 Facebook Fans ("fans")       
  .bubblechart
    %ul.bubblechains
      %li
        %span Artists
        %table
          - @artists.each do |artist|
            %tr
              %td= artist.name
              %td= artist.fan_count("Facebook")


