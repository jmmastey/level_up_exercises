- if trigger.activated?
  %label#bomb-state Bomb is active.
- else
  %label#bomb-state Bomb is inactive.

%label#notice

%input#activation-code{type: 'text'}
%input#activate-bomb{type: 'submit', value: 'Activate'}

%input#deactivation-code{type: 'text'}
%input#deactivate-bomb{type: 'submit', value: 'Deactivate'}
