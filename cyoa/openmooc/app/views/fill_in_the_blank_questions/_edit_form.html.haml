= nested_form_for @question do |f|
  = f.fields_for :page_content do |pf|
    .form-group
      = pf.label :content, 'Question'
      = pf.text_area :content, class: 'form-control', rows: '5', maxlength: 150
  = f.fields_for :answers do |af|
    .form-group
      = af.label :text, 'Answer'
      .input-group
        = af.text_field :text, class: 'form-control'
        .input-group-btn
          = af.link_to_remove 'Remove answer', class: 'btn btn-default'
  .form-group
    = f.link_to_add 'Add answer', :answers, class: 'btn btn-default'
  .form-group
    = link_to 'Cancel', @question.page, class: 'btn btn-default'
    = f.submit 'Update question', class: 'btn btn-primary'
