      <%= f.text_field :venue_id, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:venue_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:price]) %>
  </div>
  <div class="control-group">
    <%= f.label :show_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :show_type, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:show_type]) %>
  </div>
  <div class="control-group">
    <%= f.label :phone_number, :class => 'control-label' %>
