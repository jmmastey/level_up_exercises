.col-xs-12.col-sm-10.col-md-8
  .panel.panel-default
    .panel-body
      .col-xs-10.col-md-6
        = link_to lesson do
          %h4
            = lesson.name
      .col-xs-3.col-md-2
        = link_to 'View', lesson, class: 'btn btn-default'
      .col-xs-3.col-md-2
        = link_to 'Edit', edit_lesson_path(lesson), class: 'btn btn-default'
      .col-xs-3.col-md-2
        = form_for lesson,  method: :delete do |f|
          = f.submit 'Delete', class: 'btn btn-danger'
