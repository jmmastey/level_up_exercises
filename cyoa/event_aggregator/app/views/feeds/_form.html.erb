<%= form_for(@feed) do |f| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% @feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  </div class="criteria-list">
    <h2>Event Selection Criteria</h2>
    <%= render partial: 'selection_criteria/criteria_list',
               locals: { criteria: @feed.selection_criteria } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
