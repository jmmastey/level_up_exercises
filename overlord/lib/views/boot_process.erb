<div class="row status-header">
  <div class="col-md-5 status status-label">Status:</div>
  <div class="col-md-7 status status-text">Boot Process</div>
</div>

<div class="row" style="margin-top:55px">
  <div class="col-md-10 col-md-offset-1">

    <form id="bootForm" method="POST" action="stand_by" class="form-horizontal">
      <fieldset>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">Activation Code</div>
            <input class="form-control" type="password" name="post[activation-code]" placeholder="Enter death code">
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">Deactivation Code</div>
            <input class="form-control" type="password" name="post[deactivation-code]" placeholder="Enter pansy code">
          </div>
        </div>

        <div class="row">

          <div class="col-md-6">
            <button type="submit" class="btn btn-warning death-button">
              Boot Up
            </button>
          </div>

          <div class="col-md-6">
            <button type="button" class="btn btn-default death-button" onClick="parent.location='/'">
              Cancel
            </button>
          </div>

        </div>
      </fieldset>
    </form>


  </div>
</div>
