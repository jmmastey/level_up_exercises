<% provide(:title, 'Log In') %>
<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <div class="col-sm-offset-3 col-sm-9">
        <h2 class="form-title"><strong>Log In</strong></h2>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <%= form_for(:session, url: login_path, :html => { :class => "form-horizontal" }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control",  placeholder: "Enter email address" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9 center">
            <%= f.submit "Log In", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
