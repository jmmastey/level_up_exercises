<h3>Sign in</h3>

<%= form_for(:session, url: sessions_path) do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.submit 'Sign-In' %>
<% end %>

<% if flash[:failed_to_authenticate] %>
  <br>
  <span class='warning-message'>Wrong email and/or password</span>
<% end %>

<br>
<h4>Don't have an account?
  <%= link_to 'Sign Up', new_user_path %>
</h4>
