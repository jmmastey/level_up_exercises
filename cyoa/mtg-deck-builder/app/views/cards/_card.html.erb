<tr class="card" id="card-<%= card.id %>">
  <td class="card-name"><%= link_to card.name, card %></td>
  <% if deck %>
    <td class="card-type"><%= types_to_html(card.types) %></td>
    <td class="mana-cost"><%= mana_cost_to_html(card.cost) %></td>
    <td class="deck-stats">
      <a href="#" class="add"><%= image_tag("plus.png", rel: "Add to deck") %></a>
      <span class="number-in-deck"><%= cards_in_deck_with_id(deck, card.id).count %></span>
      <a href="#" class="remove"><%= image_tag("minus.png", rel: "Remove from deck") %></a>
    </td>
  <% end %>
</tr>

