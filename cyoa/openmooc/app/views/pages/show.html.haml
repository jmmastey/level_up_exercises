.col-xs-12.col-sm-8
  .page-header
    %h1
      = link_to "#{@page.lesson.course.title}", @page.lesson.course
    %br
    .dropdown
      %button.btn.btn-lg.btn-default#lesson-dropdown{ type: 'button', 'data-toggle' => 'dropdown', 'aria-haspopup' => true, 'aria-expanded' => false }
        = @page.lesson.name
        %span.caret
      %ul.dropdown-menu{ role: 'menu', 'aria-labeledby' => 'lesson-dropdown' }
        - @page.course.lessons.each do |lesson|
          %li{ role: 'presentation' }
            = link_to lesson.name, lesson, role: 'menuitem', tabindex: -1
  %nav
    %ul.pagination
      - @page.lesson.pages.each do |page|
        - if @page == page
          %li.active
            = link_to page.decorate.number, page
        - else
          %li
            = link_to page.decorate.number, page
.col-xs-8.col-sm-4
  = render partial: 'menu'
.col-xs-12.col-sm-8
  .panel.panel-primary
    .panel-body
      = render partial: @page.content.decorate.to_partial_path(:show)
.col-xs-12.col-sm-8
  .pull-right
    = link_to @page.decorate.next_link[:text], @page.decorate.next_link[:path], class: 'btn btn-primary'
