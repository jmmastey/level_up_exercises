      <%= f.text_field :ticket_url, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:ticket_url]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            events_path, :class => 'btn btn-default' %>

<% end %>
