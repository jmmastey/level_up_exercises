

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @venue.name %>
</p>


<p>
  <strong>Address:</strong>
  <%= @venue.address %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Avg price</th>
      <th>Low price</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date.strftime("%m/%d") %></td>
        <td><%= event.title %></td>
        <td><%= event.avg_price %></td>
        <td><%= event.low_price %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Tickets', event.link, class: 'btn btn-info btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_venue_path(@venue) %> |
<%= link_to 'Back', venues_path %>
