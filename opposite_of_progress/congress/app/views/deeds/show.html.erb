<h3><%= @deed.deed %></h3>

<hr />

<h4>Basics</h4>
<%= render partial: "layouts/generic_object_details", locals: {object: @deed} %>

<h4>Legislator</h4>
<div>
  <% if @deed.bioguide_id %>
    <% legislator = Legislator.where(bioguide_id: @deed.bioguide_id).first %>
    <%= render partial: "legislators/legislator_stub_item", locals: {legislator: legislator, deed: @deed} %>
  <% end %>
</div>

<h4>Bill</h4>
<div>
  <% if @deed.bill_id %>
    <% bill = Bill.where(bill_id: @deed.bill_id).first %>
    <%= render partial: "bills/bill_stub_item", locals: {bill: bill, deed: @deed} %>
  <% end %>
</div>

<hr />

<p align="center"><%= link_to "Back to Good Deeds", deeds_path %></p>