gem 'sinatra-sprockets-ext'
gem 'sinatra-contrib'

group :test do
  gem 'rspec-expectations', require: 'rspec/expectations'
  gem 'timecop'
  gem 'rack-test', require: 'rack/test'
  gem 'rspec'
  gem 'cucumber'
  gem 'cucumber-sinatra'
  gem 'capybara'
  gem 'nokogiri'
  gem 'selenium-webdriver'
  gem 'capybara-angular'
  gem 'xpath'
