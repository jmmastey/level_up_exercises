<% if @cards_deck.number_in_deck == 0 %>
  $(".card-in-deck[data-card-id=<%= @cards_deck.card_id %>]").remove();
<% end %>
$("*[data-card-id=<%= @cards_deck.card_id %>] .deck-stats").html("<%= escape_javascript(render("shared/add_remove_cards_in_deck", deck_id: @cards_deck.deck_id, card_id: @cards_deck.card_id)) %>");
