                  Prefix Verb  URI Pattern                                 Controller#Action
                  flight GET   /api/flight                                 flight#index
                  flight GET   /api/flight/:id                             flight#show
         flight_manifest GET   /api/flight/:id/manifest                    flight#manifest
           flight_search GET   /api/flight/search/:criteria                flight#search

                 airport GET   /api/airport                                airport#index
                 airport GET   /api/airport/:code                          airport#show

                airplane GET   /api/airplane                               airplane#index
                airplane GET   /api/airplane/:id                           airplane#show
           airplane_trip GET   /api/airplane/:id/trip                      airplane#trip
         airplane_refuel GET   /api/airplane/:id/refuel                    airplane#refuel
        airplane_reroute PATCH /api/airplane/:id/itineraries/:itinerary_id airplane#itineraries

               passenger GET   /api/passenger                              passenger#index
               passenger GET   /api/passenger/:id                          passenger#show
   passenger_itineraries GET   /api/passenger/:id/itineraries              passenger#itineraries
create_passenger_booking POST  /api/passenger/:id/booking                  passenger#booking
