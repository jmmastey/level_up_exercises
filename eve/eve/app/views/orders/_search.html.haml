.panel.panel-default
  .panel-heading
    %h3.panel-title Search
  .panel-body
    = form_tag(search_orders_path, method: :get, role: :form) do
      .form-group
        = label_tag(:item, "Item")
        = hidden_field_tag(:item, @item, class: "form-control")
      .form-group
        = label_tag(:region, "Region")
        = hidden_field_tag(:region, @region, class: "form-control")
      .form-group
        = label_tag(:station, "Station")
        = hidden_field_tag(:station, @station, class: "form-control")
      %button.btn.btn-primary.icon-button{type: :submit, title: "Search"}
        %span.glyphicon.glyphicon-search
