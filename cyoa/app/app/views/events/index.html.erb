
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1" class></li>
    <li data-target="#carousel-example-generic" data-slide-to="2" class></li>
    <li data-target="#carousel-example-generic" data-slide-to="3" class></li>
    <li data-target="#carousel-example-generic" data-slide-to="4" class></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="carousel-caption">
        <h1><%=link_to @carousel[0].title, @carousel[0]%></h1>
      </div>
      <img data-src="holder.js/1140x500/auto/#777:#555/text:First slide" alt="First slide [1140x500]" src="<%=@carousel[0].picture%>" data-holder-rendered="true">
    </div>
    <div class="item">
      <div class="carousel-caption">
        <h1 class="test"><%=link_to @carousel[1].title, @carousel[1]%></h1>
      </div>
      <img data-src="holder.js/1140x500/auto/#777:#555/text:Second slide" alt="Second slide [1140x500]" src="<%=@carousel[1].picture%>" data-holder-rendered="true">
    </div>
    <div class="item">
      <div class="carousel-caption">
        <h1><%=link_to @carousel[2].title, @carousel[2]%></h1>
      </div>
      <img data-src="holder.js/1140x500/auto/#777:#555/text:Third slide" alt="Third slide [1140x500]" src="<%=@carousel[2].picture%>" data-holder-rendered="true">
    </div>
    <div class="item">
      <div class="carousel-caption">
        <h1><%=link_to @carousel[3].title, @carousel[3]%></h1>
      </div>
      <img data-src="holder.js/1140x500/auto/#777:#555/text:Fourth slide" alt="Fourth slide [1140x500]" src="<%=@carousel[3].picture%>" data-holder-rendered="true">
    </div>
    <div class="item">
      <div class="carousel-caption">
        <h1><%=link_to @carousel[4].title, @carousel[4]%></h1>
      </div>
      <img data-src="holder.js/1140x500/auto/#777:#555/text:Fifth slide" alt="Fifth slide [1140x500]" src="<%=@carousel[4].picture%>" data-holder-rendered="true">
    </div>
  </div>
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<h2>Today </h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Avg price</th>
      <th>Low price</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title    %></td>
        <td><%= number_to_currency(event.avg_price) %></td>
        <td><%= number_to_currency(event.low_price) %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-primary btn-xs' %></td>
        <<td>
          <%if event.avg_price ==0%>
            <%=link_to 'No Tickets', event, class:'btn btn-danger btn-xs'%>
          <%else%>
            <%= link_to 'Buy Tickets', event.link, class: 'btn btn-info btn-xs' %>
          <%end%>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h2>This week </h2>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Avg price</th>
      <th>Low price</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @week.each do |event| %>
      <tr>
        <td><%= event.date.strftime("%m/%d") %></td>
        <td><%= event.title %></td>
        <td><%= number_to_currency(event.avg_price) %></td>
        <td><%= number_to_currency(event.low_price) %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-primary btn-xs' %></td>
        <td>
          <%unless event.avg_price ==0%>
            <%= link_to 'Tickets', event.link, class: 'btn btn-info btn-xs' %>
          <%end%>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>


