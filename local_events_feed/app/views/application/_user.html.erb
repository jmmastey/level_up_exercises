<section id='user-event-showings'>
  <table>
	<% current_user.sorted_showings.each do |showing| %>
    <tr>
	  <td>
		<div class="add-to-cal">
		  <%= link_to image_tag("calendar.png", :class => 'add-image tooltip', :title => 'Add Calendar'),
			  { controller: 'users', action: 'add_showing_to_calendar', showing_id: showing.id, id: current_user[:id] },
			  method: :post, :format => :ics, :id => "add_cal-#{showing.id}" %>
		</div>
	  </td>
	  <td class="attributes">
		<ul>
		  <li>
			<span class="date"><%= showing.pretty_local_date %></span>&nbsp
			<span class="time"><%= showing.pretty_local_time %></span>
		  </li>
		  <li>
			<span class="name"><%= link_to showing.name.truncate(50), showing.event %></span>
		  </li>
		  <li>
			<span class="location"><%= showing.location.truncate(50) %></span>
		  </li>
		</ul>
	  </td>
	  <td>
		<div class="remove">
		  <%= link_to image_tag("remove.png", :class => 'remove-x'), 
		      { controller: 'users', action: 'remove_showing', showing_id: showing[:id], id: current_user[:id] },
		      method: :post, :id => "remove-#{showing[:id]}-user-show" %>
		</div>
	  </td>
	  <% if showing.image.present? %>
	  <td class="image-sample" data-image="<%= showing.image %>" data-description="<%= showing.description.truncate(500) %>"></td>
	  <% end %>
    </tr>
	<% end %>
  </table>
</section>
