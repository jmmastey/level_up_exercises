  </div>
  <div class="control-group">
    <%= f.label :event_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :event_url, :class => 'form-control' %>
    </div>
    <%= error_span(@event[:event_url]) %>
  </div>
