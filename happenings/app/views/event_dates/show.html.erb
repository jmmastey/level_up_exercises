<%- model_class = EventDate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:venue_id) %>:</strong></dt>
  <dd><%= @event_date.venue_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_time) %>:</strong></dt>
  <dd><%= @event_date.date_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_id) %>:</strong></dt>
  <dd><%= @event_date.event_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              event_dates_path, :class => 'btn btn-default'  %>

<% if user_signed_in? && current_user.superadmin? %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_date_path(@event_date), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_date_path(@event_date),
              :method => 'delete',
              :data => {
                      :confirm => t('.confirm',
                                    :default => t("helpers.links.confirm",
                                                  :default => 'Are you sure?'))
              },
              :class => 'btn btn-danger' %>
<% end %>
