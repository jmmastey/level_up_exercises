<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<p id="notice"><%= notice %></p>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
<p>
  <strong>Name:</strong>
  <%= @venue.name %>
</p>


<p>
  <strong>Address:</strong>
  <%= @venue.address %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Avg price</th>
      <th>Low price</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date.strftime("%m/%d") %></td>
        <td><%= event.title %></td>
        <td><%= number_to_currency(event.avg_price) %></td>
        <td><%= number_to_currency(event.low_price) %></td>
        <td><%= link_to 'Show', event, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Tickets', event.link, class: 'btn btn-info btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Back', venues_path %>
<script type="text/javascript">
  handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(17);
});
</script>
