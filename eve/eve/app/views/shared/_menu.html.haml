%nav.navbar.navbar-inverse.navbar-static-top
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{type: "button", data: { toggle: "collapse", target: "#eve-navbar-collapse" } }
        %span.sr-only= t(:nav_toggle)
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"}= t(:app_name)
    .collapse.navbar-collapse#eve-navbar-collapse
      %ul.nav.navbar-nav
        %li#nav_items= link_to("Items", items_path)
        %li.dropdown
          %a.dropdown-toggle{href: "#", data: { toggle: :dropdown } }
            Locations
            %span.caret
          %ul.dropdown-menu{role: :menu}
            %li#nav_regions= link_to("Regions", regions_path)
            %li#nav_stations= link_to("Stations", stations_path)
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{href: "#", data: { toggle: :dropdown } }
              = current_user.email
              %span.caret
            %ul.dropdown-menu{role: :menu}
              %li#nav_watches= link_to("My Watches", watches_path)
              %li#nav_logout= link_to("Logout", destroy_user_session_path, method: :delete)
        - else
          %li#nav_sign_up= link_to("Sign Up", new_user_registration_path)
          %li#nav_sign_in= link_to("Sign In", new_user_session_path)
