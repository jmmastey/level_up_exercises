- def haml(filename)
  - Haml::Engine.new(File.read(filename)).render

!!! XML
!!!
%html{lang: :en}
  %head
    %title PMail
    %meta{ content: "width=device-width, initial-scale=1", name: :viewport }/
    %meta{ charset: "UTF-8" }
    %meta{ "http-equiv" => "content-type", content: "text/html; charset=UTF-8" }
    %meta{ name: "application-name", content: "PMail" }
    %meta{ name: :description, content: "Pete's Mail" }
    %meta{ name: :keywords, content: "mail,Enova,email,Pete" }
    %meta{ name: :author, content: "Dan Kotowski" }
    %link{ href: "stylesheets/normalize.css", rel: :stylesheet, type: "text/css" }/
    %link{ href: "stylesheets/font-awesome.min.css", rel: :stylesheet, type: "text/css" }/
    %link{ href: "stylesheets/pmail.css", rel: :stylesheet, type: "text/css" }/
  %body
    = haml("partials/_topbar.haml")
    %section.body
      = haml("partials/_sidebar.haml")
      %section.main-pane
        = haml("partials/_subtopbar.haml")
        = haml("partials/_messages.haml")
        = haml("partials/_footer.haml")

    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}
    %script{src: "pmail.js"}
