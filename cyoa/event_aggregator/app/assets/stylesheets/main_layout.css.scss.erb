@import "defs";

a:hover {
  background-color: #ffeedd;
  font-weight: bold;
  color: white;
}

.small-button {
  height: 20px;
  border: 1px;
  border-radius: 2px;
}

.signup-button {
  font-size: 14px;
  border: 2px solid $light-chicago-blue;
  border-radius: 40px;
  text-align: center;
  margin-top: 14px;
  padding: 12px 0 12px 0;
}

body {
  background-color: $deep-chicago-blue !important;
}

#PageContainer {
  background-color: $page-color;
}

#ControlBar {
  #PageNav {
    margin-bottom: 0px;
    background-color: $light-chicago-blue;
  }

  li {
    padding-top: 0em;
    padding-bottom: 0em;

  }
  
  div.menu-item-active {
    background-color: white;
  }
}

#ContentArea {
  padding-right: 10px;
  padding-left: 10px;
  margin-bottom: 2em;

  h1 {
    margin-top: 0px;
    padding-top: 10px;
    height: 65px;
    color: $chicago-blue;
    font: 55px fancypants;
    background-image: radial-gradient(#eee0e0, white);
  }

  h2 {
    padding-left: 5px;
    padding-top: 5px;
    height: 40px;
    color: gray;
    font: 40px fancypants;
    background-image: linear-gradient(to right, $light-chicago-blue, white);
  }
}

.section-control {
  position: relative;
  background-color: transparent;
  margin-top: 2px;
  border: 2px solid #c0c0c0;
  padding: 4px;
  border-radius: 5px;
  text-decoration: none;
  color: inherit;
  font: 16px sans-serif;
}

#BodyArea {

  background-color: $light-chicago-blue;
}

#OperationMenu {
  a {
    font-size: 15px;
  }
}

#LeftBarContent {
  padding-left: 10px;
  padding-right: 5px;
}

#ContentAreaContainer {
  background-color: $page-color;
}

.page-title {
  font: 60px fancypants;
  text-shadow: -6px -6px 15px black;
  color: $light-chicago-blue;
}

.event-categories {
  color: gray;
}

img.event-image {
  height: 200px;
  width: 200px;
}

#TopBar {
  background-color: $deep-chicago-blue;
}

#TopBarTitleArea {
  #PageTitle {
    display: flex;
    align-items: center;
    background-image:
      linear-gradient(to right, $deep-chicago-blue 40%, white 70%, $deep-chicago-blue);

    a {
      color: inherit;
      text-decoration: none;
    }

    #PageTitleGraphic {
      position: relative;
      top: 0px;
      left: 0px;
    }

    .chicago-flag-star {
      display: inline;
      width: 40px;
      height: 40px;
      margin-top: -15px;
      margin-left: 10px;
    }
  }

}

#LoginPane {
  font-size: 8pt;
  background-color: $deep-chicago-blue;
  color: white;

  input {
    color: black;
  }

  .user-name { color: yellow; }

  h2 { font-size: 15px; }

  a {
    color: inherit;
    text-decoration: none;
  }

  input[type=text],input[type=password],input[type=email] {
    border-radius: 10px;
  }
}

div.section {
  .section-title {
    text-align: center;
    color: $deep-chicago-blue;
    background-color: $light-chicago-blue;
    font-style: italic;
  }
}

#BottomBar {
  padding-left: 10px;
  padding-right: 10px;
  background-color: $light-chicago-blue;

  ul {
    list-style-type: none;
    padding-left: 0px;
  }
}

.hard-to-see {
  opacity: 0.15;
  font-size: 50%;
}

.empty-list {
  color: #a0a0a0;
}

table {

  td.control-cell {
    padding: 5px;
    width: 75px;
  }

  td.boolean {
    width: 50px;
  }
}
