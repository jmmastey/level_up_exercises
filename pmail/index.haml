- require "date"
- messages = [{ from: "Mastey, Joseph",
                count: 1,
                subject: "Superfun Learning",
                date: Date.today - 10,
                new?: true },
              { from: "Mastey, Lynch, mullins",
                count: 6,
                subject: "Apprentice Things",
                date: Date.new(2014, 12, 9)}]
!!! XML
!!!
%html{lang: :en}
  %head
    %title PMail
    %meta{content: "width=device-width, initial-scale=1", name: :viewport}/
    %link{href: "stylesheets/normalize.css", rel: :stylesheet, type: "text/css"}/
    %link{href: "stylesheets/font-awesome.min.css", rel: :stylesheet, type: "text/css"}/
    %link{href: "stylesheets/pmail.css", rel: :stylesheet, type: "text/css"}/
  %body
    %section.topbar.topbar-primary
      %ul.topbar-links.right
        %li
          %a{ href: "#" }
            %i.fa.fa-th
        %li
          %a.dropdown-toggle{ href: "#", data: { target: "#account-dropdown" }}
            dkotowski@enova.com
            %i.fa.fa-caret-down
            %i.fa.fa-caret-up
          .dropdown-panel.hidden#account-dropdown
            Test
      %a.brand{alt: "Enova", href: "#"}
      %form#search-form.search-form
        .search-box><
          %input{type: :search}/
          %button.dropdown-toggle{ type: :button, data: { target: "#search-dropdown" }}
            %i.fa.fa-caret-down
            %i.fa.fa-caret-up
          .dropdown-panel.hidden#search-dropdown Test
        %button.primary-button{type: :submit}
          %i.fa.fa-search
    %section.main-pane
      .topbar
      .message-list
        - messages.each_with_index do |message, index|
          %article.message#message{ id: index, class: message[:new?] ? "new" : nil }
            .message-actions
              %input#selected_message{ type: :checkbox, name: "selected_message", id: index, value: index }><
              %label{ for: "selected_message_#{index}" }
                %span
            .message-field.from= message[:from]
            .message-field.subject= message[:subject]
            .message-field.date= message[:date].year == Date.today.year ? message[:date].strftime('%b %-d') : message[:date].strftime('%-m/%-d/%y')
      %footer
    %nav.sidebar
      .topbar
      %main
        %button.secondary-button#compose Compose
        %ul.sidebar-links
          %li.active
            %a{ href: "#" } Inbox
          %li
            %a{ href: "#" } Starred
          %li
            %a{ href: "#" } Sent Mail
          %li
            %a{ href: "#" } Drafts
          %li
            %a{ href: "#" } Projects
          %li
            %a.dropdown-toggle{ href: "#", data: { target: "#more-links" } }
              More
              %i.fa.fa-caret-down
              %i.fa.fa-caret-up
        %ul.sidebar-links.hidden#more-links
          %li
            %a{ href: "#" } Trash

    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}
    %script{src: "pmail.js"}
